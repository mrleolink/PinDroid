<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <!-- icon -->
    <ImageView
        android:id="@+id/menurow_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="32dp"
        android:gravity="center"
        android:layout_marginTop="12dp"
        tools:src="@drawable/ic_bookmark"/>

    <!-- text -->
    <TextView
        android:id="@+id/menurow_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/menurow_icon"
        android:layout_toLeftOf="@+id/menurow_counter"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:gravity="left|center_vertical"
        android:minHeight="48dp"
        android:textColor="@color/text_title"
        android:textSize="14sp"
        tools:text="LoremIpsumLoremIpsumLoremIpsumLoremIpsumLoremIpsumLoremIpsumLoremIpsumLoremIpsumLoremIpsum"/>

    <!-- counter -->
    <TextView
        android:id="@+id/menurow_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:gravity="right|center_vertical"
        android:minHeight="48dp"
        android:textColor="@color/text_title"
        android:textSize="14sp"
        tools:text="99999999"/>

</RelativeLayout>